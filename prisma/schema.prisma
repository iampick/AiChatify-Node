datasource db {
  provider = "postgresql"
  url      = env("DATABASE")
}

model UserConv {
  id           Int     @id @default(autoincrement())
  userId       String
  conversionId String?
  apiId        String
  isRead       Boolean  @default(false)
  status       String  @default("standby")
  updateAt    DateTime   @default(now())

    @@index([userId])
    @@index([apiId])
  @@index([userId], name: "idx_UserConv") // Index for userId
  @@unique([userId, apiId], name: "userId_apiId") // Composite unique constraint
}

model ChatHistory {
    id           Int     @id @default(autoincrement())
    userId       String
    apiId        String
    sender       String   @db.VarChar(10)
    msg          String 
    filePath     String?
    createAt     DateTime   @default(now())

    @@index([createAt])
    @@index([userId,apiId])
}

model User {
    id           Int     @id @default(autoincrement())
    name        String? 
    email       String @unique

    @@index([email])
}

model Project {
    id          Int     @id @default(autoincrement())
    userId      Int
    name        String 
    serviceId   Int
    status      String
    uuid        String

    @@index([userId,uuid,serviceId])
    @@index([userId])
    @@index([serviceId])

}

model Service {
    id          Int     @id @default(autoincrement())
    userId      Int
    projectId   Int
    name        String 
    @@index([projectId,userId])
}